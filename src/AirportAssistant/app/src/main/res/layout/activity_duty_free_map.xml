<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.shaum.airportassistant.MainActivity">

    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:max="10"
            android:progress="5"
            android:layout_marginTop="11dp"
            android:id="@+id/progressBar"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:textSize="20sp"
            android:inputType="textPersonName"
            android:text="Search Store"
            android:ems="10"
            android:layout_marginTop="17dp"
            android:id="@+id/searchStore"
            android:layout_below="@+id/progressBar"
            android:layout_centerHorizontal="true"/>

    <com.google.android.gms.maps.MapView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/mapViewDutyFree"
            android:layout_above="@+id/btProgress"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"/>

    <Button
            android:text="Progress To Next Stage"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:background="@color/colorButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:id="@+id/btProgress"/>

</RelativeLayout>

