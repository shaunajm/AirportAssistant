<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.shaum.airportassistant.MainActivity">

    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:max="10"
            android:progress="3"
            android:layout_marginTop="11dp"
            android:id="@+id/ProgressBar"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:text="Check board for:"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:id="@+id/CheckBoard"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/ProgressBar"
            android:layout_centerHorizontal="true"/>

    <TableRow
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/CheckBoard"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/BoardInfo">

        <TextView
                android:text="FR227 France Ryanair 03/11/2019 17:02"
                android:padding="10dp" />

    </TableRow>
    <TextView
            android:text="Progress to this checking gate."
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_below="@+id/BoardInfo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:id="@+id/ProgressToGate"/>
    <TextView
            android:text="Your bag weighs Xkgs and expected weight is 10kg."
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_below="@+id/ProgressToGate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:id="@+id/BagWeightVExpected"/>
    <TextView
            android:text="WARNING: No batteries etc etc etc"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginTop="26dp"
            android:id="@+id/BagWarnings"
            android:layout_below="@+id/BagWeightVExpected"
            android:layout_alignStart="@+id/BagWeightVExpected"/>

    <Button
            android:text="Progress To Next Stage"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:id="@+id/ButtonProgress"/>


</RelativeLayout>

