<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.shaum.airportassistant.MainActivity">

    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:max="10"
            android:progress="1"
            android:layout_marginTop="11dp" android:id="@+id/progressBar"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>


    <TextView
            android:text="Your Bag Dimensions : XXXXX"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="26dp"
            android:id="@+id/yourBagDimensions"
            android:layout_below="@+id/progressBar"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:text="Airline Bag Dimensions : XXXXX"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="35dp"
            android:id="@+id/airlineBagDimensions"
            android:layout_below="@+id/yourBagDimensions"
            android:layout_alignStart="@+id/yourBagDimensions"/>

    <TextView
            android:text="Pass/Fail Status"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="29dp"
            android:id="@+id/passFailStatus"
            android:layout_below="@+id/airlineBagDimensions"
            android:layout_alignStart="@+id/airlineBagDimensions"/>

    <Button
            android:text="Progress to next stage"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:background="@color/colorButton"
            android:id="@+id/btProgress"
            android:layout_marginBottom="22dp"
            android:layout_marginStart="19dp" android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btRepeatScan"/>

    <Button
            android:text="Repeat Scan"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:background="@color/colorButton"
            android:id="@+id/btRepeatScan"
            android:layout_marginStart="44dp" android:layout_alignTop="@+id/btProgress"
            android:layout_alignStart="@+id/ProgressBar"/>

</RelativeLayout>
