<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.shaum.airportassistant.MainActivity">

    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:max="10"
            android:progress="6"
            android:id="@+id/progressBar"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:text="Check Departures Board for:"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/checkBoard"
            android:layout_below="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"/>

    <TableRow
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:textColor="@color/colorDefaultText"
            android:layout_marginTop="34dp"
            android:id="@+id/boardInfo"
            android:layout_below="@+id/checkBoard"
            android:layout_alignParentStart="true">

    </TableRow>
    <TextView
            android:text="Gate Number is:"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/gateNumber"
            android:layout_marginTop="63dp"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/progressBar"
            android:layout_marginStart="17dp"/>
    <EditText
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textColor="@color/colorDefaultText"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/gateNumberEnter"
            android:layout_alignTop="@+id/gateNumber"
            android:layout_alignEnd="@+id/checkBoard"/>

    <Button
            android:text="Progress To Next Stage"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:background="@color/colorButton"
            android:id="@+id/btProgress"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="27dp"/>
    <TextView
            android:text="FR227 France Ryanair 03/11/2019 17:02"
            android:padding="5dp"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/textView2"
            android:layout_alignTop="@+id/boardInfo"
            android:layout_centerHorizontal="true"/>


</RelativeLayout>

