<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.shaum.airportassistant.MainActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Toolbar.TitleText"
                android:layout_gravity="center"
                android:text="Airport Assistant"
                android:textColor="@color/colorActionBar"
                android:id="@+id/toolbar_title" />


    </android.support.v7.widget.Toolbar>


    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:max="10"
            android:progress="2"
            android:id="@+id/progressBar"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.485"/>
    <TextView
            android:text="How are you planning on travelling to the airport?"
            android:layout_width="173dp"
            android:layout_height="103dp"
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/travelAirportQuestion"
            android:layout_below="@+id/radioMode"
            android:layout_alignStart="@+id/progressBar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="62dp"
            app:layout_constraintTop_toBottomOf="@+id/progressBar"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.002" app:layout_constraintEnd_toStartOf="@+id/radioMode"
            android:layout_marginEnd="8dp"/>

    <RadioGroup
            android:id="@+id/radioMode"
            android:layout_width="160dp"
            android:layout_height="199dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/radioDecision" app:layout_constraintHorizontal_bias="0.934"
            android:layout_marginBottom="4dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/progressBar" app:layout_constraintVertical_bias="0.389">

        <RadioButton
                android:text="Driving"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:id="@+id/radioDriving"
                android:layout_below="@+id/progressBar"
                android:layout_alignEnd="@+id/progressBar"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/progressBar"
                app:layout_constraintHorizontal_bias="0.968"/>
        <RadioButton
                android:text="Public Transport"
                android:layout_width="140dp"
                android:layout_height="26dp"
                android:layout_below="@+id/radioDriving"
                android:layout_alignEnd="@+id/radioDriving"
                android:id="@+id/radioPublicTransport"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/radioDriving"
                app:layout_constraintHorizontal_bias="0.968"/>
        <RadioButton
                android:text="Cycling"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_below="@+id/radioPublicTransport"
                android:layout_alignEnd="@+id/radioPublicTransport"
                android:id="@+id/radioCycling"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/radioWalking"
                app:layout_constraintHorizontal_bias="0.968"/>
        <RadioButton
                android:text="Walking"
                android:layout_width="140dp"
                android:layout_height="26dp"
                android:layout_below="@+id/radioCycling"
                android:layout_alignEnd="@+id/radioCycling"
                android:id="@+id/radioWalking"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/radioPublicTransport"
                app:layout_constraintHorizontal_bias="0.968"/>
    </RadioGroup>

    <TextView
            android:text="Would you like directions for your chosen method of transport?"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/directionsQuestion"
            android:layout_below="@+id/radioTaxi"
            android:layout_alignStart="@+id/travelAirportQuestion"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/travelAirportQuestion"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/radioDecision" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.714"/>

    <RadioGroup
            android:id="@+id/radioDecision"
            android:layout_width="160dp"
            android:layout_height="93dp"
            android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toTopOf="@+id/btProgress"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.934">
        <RadioButton
                android:text="Yes"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:id="@+id/radioYes"
                android:layout_alignTop="@+id/directionsQuestion"
                android:layout_alignStart="@+id/radioTaxi"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/radioCycling"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.939"/>
        <RadioButton
                android:text="No"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_below="@+id/radioYes"
                android:layout_alignEnd="@+id/radioYes"
                android:id="@+id/radioNo" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/radioYes" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.968"/>
    </RadioGroup>

    <Button
            android:text="Progress to next stage"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:background="@color/colorButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/btProgress" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/directionsQuestion" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.923"/>


</android.support.constraint.ConstraintLayout>
