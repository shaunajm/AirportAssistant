<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.shaum.airportassistant.MainActivity">


    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:max="10"
            android:progress="2"
            android:layout_marginTop="11dp" android:id="@+id/ProgressBar"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <TextView
            android:text="How are you planning on travelling to the airport?"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginTop="61dp" android:id="@+id/TravelAirportQuestion"
            android:layout_below="@+id/ProgressBar" android:layout_alignStart="@+id/ProgressBar"
            android:layout_marginStart="15dp"/>
    <RadioButton
            android:text="Driving"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:id="@+id/radioDriving" android:layout_alignTop="@+id/TravelAirportQuestion"
            android:layout_alignEnd="@+id/ProgressBar" android:layout_marginEnd="15dp"/>
    <RadioButton
            android:text="Public Transport"
            android:layout_width="140dp"
            android:layout_height="30dp" android:layout_below="@+id/radioDriving"
            android:layout_alignEnd="@+id/radioDriving" android:id="@+id/radioPublicTransport"/>
    <RadioButton
            android:text="Cycling"
            android:layout_width="140dp"
            android:layout_height="30dp" android:layout_below="@+id/radioPublicTransport"
            android:layout_alignEnd="@+id/radioPublicTransport" android:id="@+id/radioCycling"/>
    <RadioButton
            android:text="Walking"
            android:layout_width="140dp"
            android:layout_height="30dp" android:layout_below="@+id/radioCycling"
            android:layout_alignEnd="@+id/radioCycling" android:id="@+id/radioWalking"/>
    <RadioButton
            android:text="Taxi"
            android:layout_width="140dp"
            android:layout_height="30dp" android:layout_below="@+id/radioWalking"
            android:layout_alignEnd="@+id/radioWalking" android:id="@+id/radioTaxi"/>
    <TextView
            android:text="Would you like directions for your chosen method of transport?"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginTop="47dp"
            android:id="@+id/DirectionsQuestion" android:layout_below="@+id/radioTaxi"
            android:layout_alignStart="@+id/TravelAirportQuestion"/>
    <RadioButton
            android:text="Yes"
            android:layout_width="140dp"
            android:layout_height="30dp" android:layout_alignTop="@+id/DirectionsQuestion"
            android:layout_toEndOf="@+id/DirectionsQuestion" android:id="@+id/radioYes"/>
    <RadioButton
            android:text="No"
            android:layout_width="140dp"
            android:layout_height="30dp" android:layout_below="@+id/radioYes"
            android:layout_alignEnd="@+id/radioYes" android:id="@+id/radioNo"/>
    <Button
            android:text="Progress to next stage"
            android:layout_width="130dp"
            android:layout_height="60dp" android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" android:layout_marginBottom="32dp" android:id="@+id/ButtonProgress"/>


</RelativeLayout>
