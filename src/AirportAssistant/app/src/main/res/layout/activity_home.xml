<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.shaum.airportassistant.MainActivity">

    <Button
            android:text="Upload Journey"
            android:layout_width="230dp"
            android:layout_height="60dp"
            tools:layout_editor_absoluteY="44dp"
            tools:layout_editor_absoluteX="92dp"
            android:id="@+id/buttonUploadJourney"
            android:layout_marginTop="66dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="81dp"/>

    <TableLayout
            android:layout_width="370dp"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:id="@+id/tableSavedJourney">

        <TableRow android:layout_width="370dp" android:layout_height="50dp">
            <TextView
                    android:text="FR227 France Ryanair 03/11/2019 17:02"
                    android:padding="30dip" />
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="FR227 France Ryanair 03/11/2019 17:02"
                    android:padding="30dip" />
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="FR227 France Ryanair 03/11/2019 17:02"
                    android:padding="30dip" />
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="FR227 France Ryanair 03/11/2019 17:02"
                    android:padding="30dip" />
        </TableRow>

    </TableLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/tableSavedJourney"
            android:layout_alignBottom="@+id/tableSavedJourney" android:layout_alignEnd="@+id/tableSavedJourney">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"/>
    </ScrollView>


</RelativeLayout>
