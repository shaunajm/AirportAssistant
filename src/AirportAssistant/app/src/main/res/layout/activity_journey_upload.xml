<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.shaum.airportassistant.MainActivity">


    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:navigationContentDescription="@string/abc_action_bar_up_description"
            app:theme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Airport Assistant"
            android:textSize="32dp"
            android:textAppearance="@style/Toolbar.TitleText"
            android:layout_gravity="center"
            android:textColor="@color/colorActionBar"
            android:id="@+id/toolbar_title" />



    </android.support.v7.widget.Toolbar>

    <TextView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:text="Please enter your flight number below so that we can gather your flight information."
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:textSize="25sp"
            android:id="@+id/infoText"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/flightNumberQuestion" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.575"/>


    <TextView
            android:text="Flight Number?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/colorActionBar"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="@drawable/textview_border_bb"
            android:id="@+id/flightNumberQuestion"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="292dp" app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.068"/>

    <EditText
            android:layout_width="95dp"
            android:layout_height="62dp"
            android:ems="10"
            android:id="@+id/flightNumber"
            android:textColor="@color/colorActionBar"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:background="@drawable/textview_border_bb"
            android:inputType="textCapCharacters"
            app:layout_constraintStart_toEndOf="@+id/flightNumberQuestion"
            android:layout_marginStart="12dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.323" android:layout_marginTop="288dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.018"/>


    <Button
            android:text="Upload Journey"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:background="@drawable/buttons_general"
            android:id="@+id/btUploadJourney"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="420dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.853" app:layout_constraintHorizontal_bias="0.498"
            />


</android.support.constraint.ConstraintLayout>
