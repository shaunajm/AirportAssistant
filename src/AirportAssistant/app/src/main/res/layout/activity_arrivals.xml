<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.shaum.airportassistant.MainActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Toolbar.TitleText"
                android:layout_gravity="center"
                android:text="Airport Assistant"
                android:textColor="@color/colorActionBar"
                android:id="@+id/toolbar_title" />


    </android.support.v7.widget.Toolbar>


    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:max="10"
            android:progress="9"
            android:id="@+id/progressBar"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="100dp"
            app:layout_constraintHorizontal_bias="0.485"/>

    <TextView
            android:text="Welcome to: XXXXXXXXXX"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/welcomeTo"
            android:layout_below="@+id/progressBar"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/progressBar"
            app:layout_constraintHorizontal_bias="0.493"/>

    <TextView
            android:text="How are you planning on travelling to the airport?"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/travelAirportQuestion"
            android:layout_below="@+id/radioDriving"
            android:layout_alignStart="@+id/progressBar"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/welcomeTo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toStartOf="@+id/radioPublicTransport"
            android:layout_marginEnd="8dp"/>
    <RadioButton
            android:text="Driving"
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:id="@+id/radioDriving"
            android:layout_below="@+id/welcomeTo"
            android:layout_alignEnd="@+id/progressBar"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/welcomeTo" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.929"/>
    <RadioButton
            android:text="Public Transport"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_below="@+id/radioDriving"
            android:layout_alignEnd="@+id/radioDriving"
            android:id="@+id/radioPublicTransport"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/radioTaxi" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.929"/>
    <RadioButton
            android:text="Cycling"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_below="@+id/radioPublicTransport"
            android:layout_alignEnd="@+id/radioPublicTransport"
            android:id="@+id/radioCycling"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/radioWalking"
            app:layout_constraintHorizontal_bias="0.929"/>
    <RadioButton
            android:text="Walking"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_below="@+id/radioCycling"
            android:layout_alignEnd="@+id/radioCycling"
            android:id="@+id/radioWalking"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/radioPublicTransport"
            app:layout_constraintHorizontal_bias="0.929"/>
    <RadioButton
            android:text="Taxi"
            android:layout_width="140dp"
            android:layout_height="28dp"
            android:layout_below="@+id/radioWalking"
            android:layout_alignEnd="@+id/radioWalking"
            android:id="@+id/radioTaxi" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/radioDriving" app:layout_constraintHorizontal_bias="0.929"/>
    <TextView
            android:text="Would you like directions for your chosen method of transport?"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/directionsQuestion"
            android:layout_below="@+id/radioTaxi"
            android:layout_alignStart="@+id/travelAirportQuestion"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/travelAirportQuestion"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/radioYes" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.586"/>
    <RadioButton
            android:text="Yes"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:id="@+id/radioYes"
            android:layout_below="@+id/radioTaxi"
            android:layout_alignStart="@+id/radioTaxi"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/radioCycling" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.929"/>
    <RadioButton
            android:text="No"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_below="@+id/radioYes"
            android:layout_alignEnd="@+id/radioYes"
            android:id="@+id/radioNo" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/radioYes" app:layout_constraintHorizontal_bias="0.929"/>
    <Button
            android:text="Progress to next stage"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:background="@color/colorButton"
            android:id="@+id/btProgress"
            android:layout_below="@+id/directionsQuestion"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/directionsQuestion"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="1.0"/>

</android.support.constraint.ConstraintLayout>
