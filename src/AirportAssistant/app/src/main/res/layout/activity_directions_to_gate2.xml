<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.shaum.airportassistant.MainActivity">

    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:max="10"
            android:progress="6"
            android:layout_marginTop="11dp" android:id="@+id/ProgressBar"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>

    <TextView
            android:text="Your gate is XX mins away"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginTop="71dp"
            android:id="@+id/GateTimeEstimation" android:layout_below="@+id/ProgressBar"
            android:layout_centerHorizontal="true"/>


    <Button
            android:text="View on Map"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:id="@+id/ButtonViewOnMap"
            android:layout_marginTop="58dp"
            android:layout_below="@+id/GateTimeEstimation" android:layout_centerHorizontal="true"/>

    <Button
            android:text="Progress To Next Stage"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:id="@+id/ButtonProgress"
            android:layout_below="@+id/ButtonViewOnMap" android:layout_alignStart="@+id/ButtonViewOnMap"
            android:layout_marginTop="55dp"/>

</RelativeLayout>

