<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.shaum.airportassistant.MainActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Toolbar.TitleText"
                android:layout_gravity="left"
                android:text="Airport Assistant"
                android:textColor="@color/colorActionBar"
                android:id="@+id/toolbar_title" />

        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/smalllogo"
                android:id="@+id/logo" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="30dp"/>


    </android.support.v7.widget.Toolbar>

    <TextView
            android:text="Will you be checking in hold luggage?"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/checkLugaggeQuestion"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="104dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" app:layout_constraintEnd_toStartOf="@+id/radioMode"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"/>


    <RadioGroup
            android:id="@+id/radioMode"
            android:layout_width="91dp"
            android:layout_height="81dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/bookedWeightNumber" app:layout_constraintHorizontal_bias="0.805"
            app:layout_constraintVertical_bias="0.288">


        <RadioButton
                android:text="Yes"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:id="@+id/radioYes"
                android:layout_alignBaseline="@+id/checkLugaggeQuestion"
                android:layout_alignBottom="@+id/checkLugaggeQuestion"
                android:layout_alignEnd="@+id/btBeginJourney"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/checkLugaggeQuestion"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp"
                app:layout_constraintHorizontal_bias="0.265"/>


        <RadioButton
                android:text="No"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:id="@+id/radioNo"
                android:layout_below="@+id/radioYes"
                android:layout_alignStart="@+id/radioYes"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/checkLugaggeQuestion" android:layout_marginStart="8dp"
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/radioYes"
                app:layout_constraintHorizontal_bias="0.268"/>
    </RadioGroup>

    <TextView
            android:text="Booked Weight?"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/bookedWeightQuestion"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/actualWeightQuestion"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/bookedWeightNumber" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.655" app:layout_constraintVertical_bias="0.744"/>

    <EditText
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/bookedWeightNumber"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/actualWeightNumber" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.777"
            app:layout_constraintVertical_bias="0.741"/>

    <TextView
            android:text="KG"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/bookedWeightKG"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.915"
            app:layout_constraintVertical_bias="0.673"/>


    <TextView
            android:text="KG"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/bookedWeightKG2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/bookedWeightKG" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.915"
            app:layout_constraintVertical_bias="0.664"/>
    <TextView
            android:text="Actual Weight?"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/actualWeightQuestion"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/actualWeightNumber"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.655"
            app:layout_constraintVertical_bias="0.662"/>

    <EditText
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/actualWeightNumber"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintHorizontal_bias="0.777"
            app:layout_constraintVertical_bias="0.666"/>
    <Button
            android:text="Begin Journey"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:background="@color/colorButton"
            android:id="@+id/btBeginJourney"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/actualWeightQuestion"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/actualWeightQuestion"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="8dp"/>


</android.support.constraint.ConstraintLayout>
