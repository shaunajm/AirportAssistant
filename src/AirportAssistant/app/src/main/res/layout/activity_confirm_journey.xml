<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.shaum.airportassistant.MainActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Toolbar.TitleText"
                android:layout_gravity="center"
                android:text="Airport Assistant"
                android:textColor="@color/colorActionBar"
                android:id="@+id/toolbar_title" />


    </android.support.v7.widget.Toolbar>


    <TextView
            android:text="Would you like to start the journey"
            android:layout_width="210dp"
            android:layout_height="80dp"
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/confirmStartJourney"
            android:layout_above="@+id/selectedJourneyInfo" android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="116dp"
            app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="FR227 France Ryanair 03/11/2019 17:02"
            android:layout_width="360dp"
            android:layout_height="80dp"
            android:textColor="@color/colorDefaultText"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/selectedJourneyInfo"
            android:layout_centerVertical="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/confirmStartJourney" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Start Journey"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:id="@+id/btstartJourney"
            android:background="@color/colorButton"
            android:layout_alignParentBottom="true" android:layout_alignStart="@+id/selectedJourneyInfo"
            android:layout_marginTop="156dp"
            app:layout_constraintTop_toBottomOf="@+id/selectedJourneyInfo" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.698"/>
    <Button
            android:text="Cancel"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:id="@+id/btCancel"
            android:background="@color/colorButton"
            android:layout_alignBottom="@+id/btstartJourney" android:layout_alignEnd="@+id/selectedJourneyInfo"
            android:layout_alignTop="@+id/btstartJourney"
            android:layout_marginTop="156dp"
            app:layout_constraintTop_toBottomOf="@+id/selectedJourneyInfo"
            app:layout_constraintEnd_toStartOf="@+id/btstartJourney" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.189" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.698"/>


</android.support.constraint.ConstraintLayout>
